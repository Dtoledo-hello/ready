RewriteEngine On
RewriteBase /

# Redirección a versión sin "www" y con "https"
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# Redirección a versión con ".html" (para páginas internas)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} !(\.[a-zA-Z0-9]{1,5}|/)$
RewriteRule ^(.*)$ $1.html [L]

# Http to https
RewriteCond %{SERVER_PORT} 80
RewriteCond %{HTTP_HOST} ^ready\.ec [NC]
RewriteRule ^(.*)$ https://ready.ec/$1 [R=301,L]

# Error document redirection
ErrorDocument 404 https://ready.ec/404.php

<IfModule mod_headers.c>
    # HSTS Configuration
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

    # Disable caching for specific file types
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|ico|woff2?|mp4|webm|ogg|css|js)$">
        Header set Cache-Control "no-store, no-cache, must-revalidate, max-age=0"
    </FilesMatch>
</IfModule>